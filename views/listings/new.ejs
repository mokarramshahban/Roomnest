<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
    <h2>Create a new listing</h2>
    <form method="POST" action="/listings">

        <div class="mb-3">
            <label for="listing[title]" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Kings Palace" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label for="listing[description]" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="listing[image][url]" class="form-label">Image URL/Link</label>
            <input name="listing[image][url]" placeholder="enter image URL/Link" type="text" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1500" type="number" class="form-control">
        </div>
        <div class="mb-3 col-md-8">
            <label for="listing[country]" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" type="text" class="form-control">
        </div>
        </div>
        
        <div class="mb-3">
            <label for="listing[location]" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Amritsar" type="text" class="form-control">
        </div>
        

        <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
        <br><br>
    </form>
    </div>
</div>